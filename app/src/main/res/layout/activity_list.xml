<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/secondaryLightColor"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        tools:context=".MainActivity">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/image_top"
            android:src="@drawable/hongkongprotests_07012019_1"
            android:layout_width="0dp"
            android:layout_height="205dp"
            android:layout_marginVertical="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
            android:id="@+id/image_1"
            android:src="@drawable/firstdayofschool"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_marginVertical="16dp"
          app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"
              app:layout_constraintTop_toBottomOf="@id/image_top"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toLeftOf="@id/image_2"/>
    <ImageView
            android:id="@+id/image_2"
            android:src="@drawable/skidhorseshow"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_marginVertical="16dp"
            app:layout_constraintLeft_toRightOf="@id/image_1"
            app:layout_constraintTop_toBottomOf="@id/image_top"
            app:layout_constraintBottom_toTopOf="@id/image_4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:id="@+id/image_3"
            android:src="@drawable/brucespringsteen"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_marginVertical="16dp"
            app:layout_constraintTop_toBottomOf="@id/image_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/image_4"/>

    <ImageView
            android:id="@+id/image_4"
            android:src="@drawable/imageoftheday"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_marginVertical="16dp"
            app:layout_constraintLeft_toRightOf="@id/image_3"
             app:layout_constraintTop_toBottomOf="@id/image_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>






</androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>